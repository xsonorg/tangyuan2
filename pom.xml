				<repository>
					<id>aix.releases.http</id>
					<name>Nexus Release Repository</name>
					<url>http://192.168.50.238:8081/repository/maven-releases/</url>
				</repository>
				<snapshotRepository>
					<id>aix.snapshots.http</id>

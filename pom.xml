	<properties>
		<java.version>1.8</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<tangyuan.version>1.3.0</tangyuan.version>
		<xco.version>1.0.5</xco.version>
		<xson-redis.version>1.0.2</xson-redis.version>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://xson.org/schema/tangyuan/rpc/component" targetNamespace="http://xson.org/schema/tangyuan/rpc/component" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="rpc-component">
		<xs:complexType>
			<xs:sequence>
				<xs:choice maxOccurs="unbounded">
					<xs:element ref="config-property"/>
					<xs:element ref="balance"/>
					<xs:element ref="remote-host"/>
					<xs:element ref="client"/>
					<xs:element ref="remote-node"/>
				</xs:choice>
			</xs:sequence>
			<xs:attribute name="ns" type="xs:string"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="config-property">
		<xs:complexType>
			<xs:attribute name="name" type="xs:string" use="required"/>
			<xs:attribute name="value" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="balance">
		<xs:complexType>
			<xs:attribute name="resource" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="remote-host">
		<xs:complexType>
			<xs:attribute name="resource" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="client">
		<xs:complexType>
			<xs:attribute name="id" type="xs:string" use="required"/>
			<xs:attribute name="schema" type="xs:string" use="optional"/>
			<xs:attribute name="usi" type="xs:string" use="optional"/>
			<xs:attribute name="isDefault" type="xs:boolean" use="optional"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="remote-node">
		<xs:complexType>
			<xs:attribute name="id" type="xs:string" use="required"/>
			<xs:attribute name="domain" type="xs:string" use="required"/>
			<xs:attribute name="client" type="xs:string" use="optional"/>
		</xs:complexType>
	</xs:element>
</xs:schema>

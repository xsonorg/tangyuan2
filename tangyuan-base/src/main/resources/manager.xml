<?xml version="1.0" encoding="UTF-8"?>
<manager xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://xson.org/schema/tangyuan/manager/1.3.0/component.xsd">
	
	<!-- 管理中心配置: 移位到tangyuan-manager-launcher.properties -->
	
	<!-- 1.应用状态管理: 默认开启[enabled="true"] -->
	<app-manager enabled="true"/>
	
	<!-- 2.服务状态管理 -->
	<service-manager enabled="true"/>
	
	<!-- 3.服务授权管理 -->
	<access-manager enabled="true" resource="manager-access.xml" />
	
	<!-- 4.服务跟踪管理状态 trace-config.properties -->
	<trace-manager enabled="true" resource="tangyuan-trace.properties" />
	
	<!-- 5.应用和服务监控管理 -->
	<monitor-manager enabled="true" resource="tangyuan-monitor.properties"/>
	
	<!-- 6.配置中心管理: 需要首先启动 -->
	<config-manager enabled="true">
		<resource name="tangyuan-log.properties" reloader="a.b.c.d" order="10"/>
		<resource name="trace-config.properties" reloader="a.b.c.d" />
		<resource name="tangyuan-log.properties" reloader="a.b.c.d" />
		<!-- reloader，需要实现一个接口，并可以允许注册客户事件 -->
		
		<reloader class="a.b.c.d" resource="tangyuan-log.properties" order="10"/>
	</config-manager>
	
</manager>